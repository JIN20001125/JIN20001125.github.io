        document.getElementById('List-button').addEventListener('click', function() {
            const container = document.querySelector('.container');
            const listButtonImage = document.querySelector('#List-button img');

            // コンテナの表示状態に応じて画像を切り替える
            if (container.classList.contains('slide-down')) {
                listButtonImage.classList.add('hidden'); // 画像を非表示にする
                setTimeout(() => {
                    listButtonImage.src = '/src/img/List.jpg'; // リスト画像に変更
                    listButtonImage.classList.remove('hidden'); // 画像を表示する
                }, 600); // アニメーションの時間に合わせて画像を変更
                container.classList.remove('slide-down'); // slide-downクラスを削除
                container.classList.add('slide-up'); // slide-upクラスを追加
                setTimeout(() => {
                    container.style.display = 'none'; // コンテナを非表示にする
                    container.classList.remove('slide-up'); // slide-upクラスを削除
                }, 600); // アニメーションの時間に合わせて非表示にする
            } else {
                listButtonImage.classList.add('hidden'); // 画像を非表示にする
                setTimeout(() => {
                    listButtonImage.src = '/src/img/X.jpg'; // ×画像に変更
                    listButtonImage.classList.remove('hidden'); // 画像を表示する
                }, 600); // アニメーションの時間に合わせて画像を変更
                container.style.display = 'block'; // コンテナを表示
                setTimeout(() => {
                    container.classList.add('slide-down'); // slide-downクラスを追加
                }, 10); // display: block が適用されてからアニメーションを開始
            }
        });
